<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1D">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/confidential_custom_chat_bar_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/user_icon"/>

    <TextView
        android:id="@+id/confidential_custom_chat_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="serif"
        android:text="@string/display_name"
        android:textColor="@color/Red"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/confidential_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confidential_custom_chat_bar_title"
        android:text="Keep it Confidential"
        android:textColor="@color/White"
        android:textSize="12sp"/>

</RelativeLayout>